# üîê FLOWMATIK BACKEND - ENVIRONMENT VARIABLES

# ‚öôÔ∏è APPLICATION SETTINGS
NODE_ENV=development
PORT=3000
API_VERSION=v1
APP_NAME=Flowmatik Backend
APP_URL=http://localhost:3000

# üóÑÔ∏è DATABASE CONFIGURATION
DATABASE_URL=postgresql://username:password@localhost:5432/flowmatik
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=

# üîë JWT CONFIGURATION
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=your-refresh-secret-key
JWT_REFRESH_EXPIRES_IN=30d

# üîê ENCRYPTION
ENCRYPTION_KEY=your-32-character-encryption-key
BCRYPT_ROUNDS=12

# ü§ñ SILICONFLOW API
SILICONFLOW_API_KEY=your-siliconflow-api-key
SILICONFLOW_BASE_URL=https://api.siliconflow.cn/v1
SILICONFLOW_MODEL_TEXT=doubao-1.5-pro-32k
SILICONFLOW_MODEL_IMAGE=black-forest-labs/FLUX.1-schnell
SILICONFLOW_MODEL_VIDEO=Wan-AI/Wan2.1-T2V-14B-Turbo
SILICONFLOW_MODEL_AUDIO=FunAudioLLM/CosyVoice2-0.5B

# üí≥ PAYMENT PROVIDERS
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

LEMONSQUEEZY_API_KEY=your-lemonsqueezy-api-key
LEMONSQUEEZY_STORE_ID=your-store-id
LEMONSQUEEZY_WEBHOOK_SECRET=your-webhook-secret

# üìß EMAIL CONFIGURATION
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
EMAIL_FROM=noreply@flowmatik.co

# üîó LARK INTEGRATION
LARK_APP_ID=your-lark-app-id
LARK_APP_SECRET=your-lark-app-secret
LARK_WEBHOOK_URL=your-lark-webhook-url

# üåê CORS CONFIGURATION
CORS_ORIGIN=http://localhost:3000,https://flowmatik.co,https://admin.flowmatik.co
CORS_CREDENTIALS=true

# üìä MONITORING & LOGGING
LOG_LEVEL=info
LOG_FILE_PATH=./logs
SENTRY_DSN=your-sentry-dsn

# üöÄ PERFORMANCE
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
CACHE_TTL=3600
MAX_FILE_SIZE=10485760

# üîß DEVELOPMENT
DEBUG=flowmatik:*
SWAGGER_ENABLED=true

# üê≥ DOCKER
DOCKER_REGISTRY=your-registry
DOCKER_IMAGE_TAG=latest

# ‚òÅÔ∏è CLOUD STORAGE
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=flowmatik-storage

# üîÑ WEBHOOK ENDPOINTS
WEBHOOK_SECRET=your-webhook-secret
WEBHOOK_TIMEOUT=30000

# üß™ TESTING
TEST_DATABASE_URL=postgresql://username:password@localhost:5432/flowmatik_test
TEST_REDIS_URL=redis://localhost:6379/1

