{
  "name": "flowmatik-backend",
  "version": "1.0.0",
  "description": "Advanced AI-powered content creation platform backend",
  "main": "dist/index.js",
  "scripts": {
    "dev": "nodemon --exec ts-node src/index.ts",
    "build": "tsc",
    "start": "NODE_ENV=production node dist/index.js",
    "start:prod": "NODE_ENV=production node dist/index.js",
    "test": "jest --passWithNoTests",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write src/**/*.ts",
    "type-check": "tsc --noEmit",
    "db:migrate": "node scripts/migrate.js",
    "db:seed": "node scripts/seed.js",
    "db:reset": "node scripts/reset.js",
    "railway:deploy": "./scripts/deploy-railway.sh",
    "railway:logs": "railway logs",
    "railway:open": "railway open",
    "railway:vars": "railway variables",
    "railway:status": "railway status",
    "postbuild": "echo 'Build completed successfully'",
    "prestart": "echo 'Starting Flowmatik Backend...'",
    "health:check": "curl -f http://localhost:$PORT/health || exit 1",
    "logs:tail": "tail -f logs/app.log",
    "clean": "rm -rf dist coverage logs/*.log",
    "precommit": "npm run lint && npm run type-check && npm run test"
  },
  "keywords": [
    "ai",
    "content-creation",
    "api",
    "typescript",
    "express",
    "websocket",
    "payments",
    "stripe",
    "lemonsqueezy",
    "siliconflow",
    "railway"
  ],
  "author": "Flowmatik Team",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "dependencies": {
    "express": "^4.18.2",
    "socket.io": "^4.7.4",
    "jsonwebtoken": "^9.0.2",
    "bcrypt": "^5.1.1",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "compression": "^1.7.4",
    "axios": "^1.6.2",
    "stripe": "^14.9.0",
    "mysql2": "^3.6.5",
    "redis": "^4.6.11",
    "winston": "^3.11.0",
    "joi": "^17.11.0",
    "multer": "^1.4.5-lts.1",
    "sharp": "^0.33.0",
    "nodemailer": "^6.9.7",
    "cron": "^3.1.6",
    "dotenv": "^16.3.1",
    "uuid": "^9.0.1",
    "moment": "^2.29.4",
    "lodash": "^4.17.21",
    "fs-extra": "^11.2.0",
    "csv-parser": "^3.0.0",
    "csv-writer": "^1.6.0",
    "pdf-lib": "^1.17.1",
    "archiver": "^6.0.1",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.0",
    "morgan": "^1.10.0",
    "express-async-errors": "^3.1.1"
  },
  "devDependencies": {
    "@types/node": "^20.10.4",
    "@types/express": "^4.17.21",
    "@types/cors": "^2.8.17",
    "@types/bcrypt": "^5.0.2",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/compression": "^1.7.5",
    "@types/multer": "^1.4.11",
    "@types/nodemailer": "^6.4.14",
    "@types/uuid": "^9.0.7",
    "@types/lodash": "^4.14.202",
    "@types/fs-extra": "^11.0.4",
    "@types/archiver": "^6.0.2",
    "@types/morgan": "^1.9.9",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.6",
    "@types/jest": "^29.5.8",
    "@types/supertest": "^2.0.16",
    "typescript": "^5.3.3",
    "ts-node": "^10.9.1",
    "nodemon": "^3.0.2",
    "eslint": "^8.55.0",
    "@typescript-eslint/eslint-plugin": "^6.13.1",
    "@typescript-eslint/parser": "^6.13.1",
    "prettier": "^3.1.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "supertest": "^6.3.3"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/flowmatik/backend.git"
  },
  "bugs": {
    "url": "https://github.com/flowmatik/backend/issues"
  },
  "homepage": "https://flowmatik.co"
}

